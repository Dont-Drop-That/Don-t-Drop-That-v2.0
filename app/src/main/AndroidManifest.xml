<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.game.ballgame">

    <application android:allowBackup="true" android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher" android:theme="@style/AppTheme">

        <activity
            android:name=".FirstUsePage"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".GuidePage"
                  android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen"/>
        <activity android:name=".SplashPage"
                  android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen"/>
        <activity android:name=".GameHomePage"
                  android:screenOrientation="landscape"
            />
        <activity android:name=".GamePage" android:screenOrientation="landscape" />


    </application>

</manifest>
